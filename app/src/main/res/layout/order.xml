<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/primery_box_stroke"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/black"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/person"/>

        <TextView
            android:layout_weight="1"
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="jakshan sharma"
            android:textColor="@color/black"
             />

        <TextView
            android:id="@+id/rs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="Rs 180"
            android:textColor="@color/colorPrimary"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/payment_type_layout"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/black"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="Order No : 2354343"
            android:textColor="@color/gray"
            android:textSize="12sp"/>

        <TextView
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="Payment Type : Debit Cart"
            android:textColor="@color/gray" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/quntity_layout"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/payment_type_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:tint="@color/black"
            android:layout_width="24dp"
            android:layout_height="24dp"
            />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/robotomedium"
            android:text="1kg. Tamato, 1 packet  orange, 1packet  Green chilli"
            android:textColor="@color/gray"
            android:textSize="12sp"/>


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/action_layout"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quntity_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

       <TextView

           android:paddingHorizontal="12dp"
           android:background="@drawable/primery_box_stroke"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="View"
           android:textColor="@color/colorPrimary"/>

        <TextView
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:paddingHorizontal="12dp"
            android:background="@drawable/primery_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reject"
            android:textColor="@color/white"/>

        <TextView
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:paddingHorizontal="12dp"
            android:background="@drawable/blue_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accept"
            android:textColor="@color/white"/>


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>